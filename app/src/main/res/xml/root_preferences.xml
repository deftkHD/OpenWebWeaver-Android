<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <Preference
            app:fragment="OverviewSettingsFragment"
            app:key="customize_overview_screen"
            app:summary="@string/customize_overview_description"
            app:title="@string/customize_overview" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="open_link_external"
            app:title="@string/setting_open_link_external" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="show_devtools"
            app:summary="@string/devtools_summary"
            app:title="@string/devtools" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/file_storage">

        <SwitchPreference
            app:defaultValue="true"
            app:key="file_storage_correct_file_names"
            app:summary="@string/setting_correct_file_storage_file_names_description"
            app:title="@string/setting_correct_file_storage_file_names" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="file_storage_display_progress_pct"
            app:title="@string/setting_file_storage_display_progress_pct_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/file_storage_integration">

        <SwitchPreference
            app:defaultValue="false"
            app:key="file_storage_integration_enable_preview_images"
            app:summary="@string/setting_enable_preview_images_description"
            app:title="@string/setting_enable_preview_images" />

    </PreferenceCategory>

</PreferenceScreen>